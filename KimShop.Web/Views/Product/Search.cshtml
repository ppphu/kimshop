@model KimShop.Web.Infrastructure.Core.PaginationSet<KimShop.Web.Models.ProductViewModel>
@{
    var keyWord = (string)ViewBag.keyWord;
    ViewBag.Title = "Kết quả tìm kiếm cho từ khóa" + keyWord;
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="women-product">
    <div class="w_content">
        <div class="women">
            <a href=""><h4>Kết quả tìm kiếm: @keyWord - <span>@Model.TotalCount sản phẩm</span> </h4></a>
            <ul class="w_nav">
                <li>Sắp xếp : </li>
                <li><a class="active" href="?page=@Model.Page&sort=popular">Phổ biến</a></li> |
                <li><a href="?page=@Model.Page&sort=new">Mới nhất</a></li> |
                <li><a href="?page=@Model.Page&sort=discount">Khuyến mãi</a></li> |
                <li><a href="?page=@Model.Page&sort=price">Giá: Thấp->cao High </a></li>
            </ul>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- grids_of_4 -->
    <div class="grid-product">
        @if (Model.Count > 0)
        {
            foreach (var product in Model.Items)
            {
                var url = "/" + product.Alias + ".p-" + product.ID + ".html";
                <div class="product-grid">
                    <div class="content_box">
                        <a href="@url">
                            <div class="left-grid-view grid-view-left">
                                <img src="@product.Image" class="img-responsive watch-right" alt="@product.Name" />
                                <div class="mask">
                                    <div class="info"></div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <h4><a href="@url">@product.Name</a></h4>
                    <p>@product.Description</p>
                    @(product.Price == 0 ? "Liên hệ" : product.Price.ToString("N0"))
                </div>
            }
            <div class="clearfix"></div>
            if (Model.TotalPages > 0)
            {
                var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                <nav aria-label="Page navigation example">

                    <ul class="pagination">
                        @if (Model.Page > 1)
                        {
                            <li class="page-item">
                                <a href="?page=1&keyword=@keyWord" aria-label="First">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a href="?page=@(Model.Page-1)&keyword=@keyWord" aria-label="Privious">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                            </li>
                        }
                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (Model.Page == i)
                            {
                                <li class="page-item active"><a href="?page=@i&keyword=@keyWord" class="page-link" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a href="?page=@i&keyword=@keyWord" class="page-link" title="Trang @i">@i</a></li>
                            }
                        }

                        @if (Model.Page < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a href="?page=@(Model.Page+1)&keyword=@keyWord" aria-label="Next">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>

                            <li class="page-item">
                                <a href="?page=@Model.TotalPages&keyword=@keyWord" aria-label="Last">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center">Không có bản ghi nào được tìm thấy.</div>
            <div class="clearfix"></div>
        }
    </div>
</div>


