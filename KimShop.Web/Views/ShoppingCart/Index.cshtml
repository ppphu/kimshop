@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section jsFooter{
    <script src="~/Assets/client/js/controllers/shoppingCart.js"></script>
}

<div class="single_top">
    <div class="single_grid">
        <div id="cartContent">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Giá sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="cartBody"></tbody>
            </table>
            <button class="btn btn-sm btn-danger" id="btnDeleteAllCart">Xóa giỏ hàng</button>
            <button class="btn btn-sm btn-success" id="btnContinue">Tiếp tục mua hàng</button>
            <button class="btn btn-sm btn-primary" id="btnCheckout">Thanh toán</button>

            <div class="pull-right">
                Tổng tiền: <span id="lblTotalOrder"></span>
            </div>
        </div>

        <div id="divCheckout" style="display:none">
            <div class="reservation_top">
                <div class="contact_right">
                    <h3>Nhập thông tin thanh toán</h3>
                    <div class="contact-form">
                        <form method="post" id="frmPayment">
                            @if (Request.IsAuthenticated)
                            {
                                <label><input type="checkbox" id="chkUserLoginInfo" />Sử dụng thông tin đăng nhập</label>
                            }
                            <input type="text" class="textbox" id="txtFullName" name="name" placeholder="Nhập họ tên" />
                            <input type="text" class="textbox" id="txtAddress" name="address" placeholder="Nhập địa chỉ" />
                            <input type="text" class="textbox" id="txtPhone" name="phone" placeholder="Nhập số điện thoại" />
                            <input type="text" class="textbox" id="txtEmail" name="email" placeholder="Nhập email" />
                            <textarea value="Message" id="txtMessage" placeholder="Ghi chú khách hàng"></textarea>
                            <input type="button" id="btnCreateOrder" value="Thanh toán">
                            <div class="clearfix"> </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<script id="templateCart" type="x-tmpl-mustache">
    <tr>
        <td>{{ProductId}}</td>
        <td>{{ProductName}}</td>
        <td><img src="{{Image}}" height="70" /></td>
        <td>{{PriceF}}</td>
        <td><input type="number" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" class="input txtQuantity" /></td>
        <td id="amount_{{ProductId}}">{{Amount}}</td>
        <td><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}"><i class="fa fa-close"></i></button></td>
    </tr>
</script>