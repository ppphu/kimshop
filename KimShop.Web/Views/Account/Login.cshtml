@model KimShop.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>ĐĂNG NHẬP</h3>
        @using (Html.BeginForm("Login", "Account",new { returnUrl = @ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div>
                <span>Tên tài khoản<label>*</label></span>
                @Html.TextBoxFor(Model=>Model.UserName)
            </div>
            <div>
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(Model=>Model.Password)
            </div>
            <div>
                @Html.CheckBoxFor(Model=>Model.RememberMe)
                Nhớ mật khẩu
            </div>
                <input type="submit" value="Đăng nhập">
                <a class="forgot" href="#">Bạn quên mật khẩu?</a>
                }
            </div>
    <div class="login-left">
        <h3>ĐĂNG KÝ THÀNH VIÊN</h3>
        <p>Bằng cách tạo tài khoản với cửa hàng của chúng tôi, bạn sẽ có quy trình thanh toán nhanh hơn, lưu trữ nhiều địa chỉ giao hàng, xem và theo dõi các đơn đặt hàng trong tài khoản của bạn và hơn thế nữa. Vui lòng đăng ký dưới đây:</p>
        <a class="acount-btn" href="/dang-ky.html">Tạo tài khoản</a>
    </div>
    <div class="clearfix"> </div>
</div>